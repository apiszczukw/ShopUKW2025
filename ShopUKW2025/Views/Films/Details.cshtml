@model Film

<table>
	<tr>
		<td>
			<h2> @Model.Category.Name </h2>
			@(await Component.InvokeAsync("SideMenu", new { categoryName = Model.Category.Name }))
		</td>
		<td>
			<img src="~/obrazki/@Model.Poster" height="400px"/>
		</td>
		<td>
			<ul>
				<li>Tytuł: @Model.Title</li>
				<li>Reżyser: @Model.Director</li>
				<li>Cena: @Model.Price zł</li>
				<li>Opis: @Model.Desc</li>
			</ul>
			<button class="btn btn-secondary" onclick="window.location.href='@Url.Action("AddToCart", "Cart", new { filmId = Model.FilmId })'">Dodaj do koszyka 🛒</button>

			<button class="btn btn-primary" onclick="window.location.href='@Url.Action("EditFilm", "Films", new { id = Model.FilmId })'">Edytuj</button>
		</td>
	</tr>
</table>