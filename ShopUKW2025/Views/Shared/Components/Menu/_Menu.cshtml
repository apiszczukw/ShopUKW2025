@model IEnumerable<Category>

<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
        <ul class="navbar-nav">
            @foreach (var category in Model)
            {
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ProductList", "Films", new { categoryName = category.Name })">@category.Name</a>
                </li>
            }
            <li>
                <a class="nav-link btn btn-primary" href="@Url.Action("AllFilms", "Films")">Wszystkie</a>
            </li>

            <li>
                @using(Html.BeginForm("Search", "Films"))
                {
                    @Html.TextBox("tekst") 
                    <button type="submit" class="btn btn-outline-secondary">Szukaj</button>
                }
            </li>
        </ul>
    </div>
</nav>